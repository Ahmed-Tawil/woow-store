<div class="container">
  <a class="btn btn-primary mt-3" href="/products" role="button" style="width: 100%;">
    <i class="fas fa-clipboard-list d-inline-block"></i>
    <label class="d-inline-block mr-2">عرض المنتجات</label>
  </a>

  <hr class="mt-2">
  <div class="text-center my-3" id="mainTitile">
    <h2>إضافة منتج جديد</h2>

  </div>



  <% if (data == false) { %>
  <h5 class="text-center mb-3">
    <hr mb-3>
    قم بإضافة صنف!
  </h5>
  <% }else{ %>

  <div class="alert" id="alert">

  </div>
  <form action="/products/add-product" method="POST" id="form1">

    <div class="form-group">
      <label class="col-form-label" for="inputDefault">الصنف :</label>
      <select  name="productClass" id="productClass">
        <% data.forEach(item => { %>
        <option value="<%= item._id %>"><%= item.className %></option>
        <% }) %>
      </select>
    </div>
    <div class="form-group">
      <label class="col-form-label" for="inputDefault">اسم المنتج :</label>
      <input type="text" class="form-control" placeholder="اسم المنتج" id="productNameInput" name='productNameInput'
        required>
    </div>

    <div class="form-group">
      <label class="col-form-label" for="inputDefault">السعر :</label>
      <div class="form-group">
        <div class="input-group mb-2">

          <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" min="0" step="any"
            name="productPrice" required>
          <div class="input-group-prepend">
            <span class="input-group-text">شيكل</span>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-form-label" for="inputDefault">عموله العامل الأساسي :</label>
      <div class="form-group">
        <div class="input-group mb-2">

          <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" min="0" step="any"
            name="basicEmpPrice" required>
          <div class="input-group-prepend">
            <span class="input-group-text">شيكل</span>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group mb-3">
      <label class="col-form-label" for="inputDefault">عمولة العامل المساعد :</label>
      <div class="form-group">
        <div class="input-group mb-2">

          <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" min="0" step="any"
            name="helperEmpPrice" required>
          <div class="input-group-prepend">
            <span class="input-group-text">شيكل</span>
          </div>
        </div>
      </div>
    </div>

    <div class="row">

      <div class="col-md-10">
        <div class="form-group">
          <label class="col-form-label" for="inputDefault">العناصر المستهلكة</label>
          <select  id="consumptionElement">
            <% items.forEach(item => { %>
            <option value="<%= item._id %>"><%= item.name %></option>
            <% }) %>
          </select>
        </div>
      </div>
      <div class="col-md-2 text-center">
        <label class="col-form-label mx-auto" for="inputDefault">إضافه مجموعة</label>

        <a class="btn btn-primary mb-4" role="button" style="width: 100%;color: white;" id="addBtn">
          <i class="fas fa-plus d-inline-block" role="button"></i>
        </a>

      </div>


    </div>
    <div id="table">
    </div>
    <input type="text" hidden id="hidden_input" name="consumptionElements">

    <!-- Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">تعديل كمية مخصصة</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <div class="form-group">
              <label class="col-form-label" for="inputDefault">الكمية :</label>
              <div class="form-group">
                <div class="input-group mb-2">

                  <input type="number" class="form-control" min="0" value="0" step="any" name="qty" id="editQtyInput">
                  <div class="input-group-prepend">
                    <span class="input-group-text">عنصر</span>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <div class="modal-footer" style="font-family: 'Cairo', sans-serif; color: white;">
            <a type="button" style="font-family:inherit;" class="btn btn-secondary" data-dismiss="modal">إغلاق</a>
            <a class="btn btn-primary" style="font-family:inherit;" id="editQtyBtn" role="button">تعديل</a>
          </div>

        </div>
      </div>
    </div>








    <button class="btn btn-primary my-4" role="button" style="width: 100%;" type="submit" onclick='return btnClick()'>

      <i class="fas fa-plus d-inline-block" role="button"></i>
      <label class="d-inline-block mr-2" role="button">إضافة المنتج</label>
    </button>
  </form>
  <script src="/js/customConsumptionElement.js"></script>
  <script>
    $(document).ready(()=>{
      $('#consumptionElement').selectize({
        onDropdownOpen: function () {
            this.clear();
            this.focus()
        }
      })

      $('#productClass').selectize({
        onDropdownOpen: function () {
            this.clear();
            this.focus()
        }
      })

    })


  </script>

  <% } %>


</div>